@{
    ViewBag.Title = "Token List";
}

<div class="container">
    <div class="row">

        <h4 class="page-head-line">Token > Token List </h4>
        <div class="row">
            <div class="col-md-2">
                <button class="btn btn-color">
                    @Html.ActionLink("Generate Token", "Create")
