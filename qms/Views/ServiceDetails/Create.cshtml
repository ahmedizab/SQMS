            }


            //if (contactNo == "") {
            //    alert('Please type Mobile no');
            //    return false;
            //}
            //var con = JSON.stringify(contactNo);

            $.ajax({
                url: '/SQMS/ServiceDetails/Create',
                type: 'POST',
                dataType: 'json',
                data: { model: data0 },
                success: function (data) {

                    $("#update-message").html('');
                    $("#txtContact").val('');
                    $("#txtName").val('');
                    $("#txtIssues").val('');
                    $("#txtsolutions").val('');
                    $("#txtAddress").val('');
                    $("#historyDiv").hide();
                    $("#txtServiceType").val('');
                    $("#start_time").val('');

                    NewServiceNo();
                }
            });

        }

    </script>
}
