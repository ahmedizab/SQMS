@model qms.ViewModels.VMServiceDetails
@using qms.Utility;
@*@model IEnumerable<qms.Models.tblServiceDetail>*@
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@{
    ViewBag.Title = "Customer Service";
    SessionManager sm = new SessionManager(Session);
}

<div class="container">
    <div class="row">
        <div class="page-head-line" style="position:relative; font-weight:bold; padding-bottom:3px">
            <div style="position:relative; float:left">
                <h4>Customer Service > Create Service </h4>
            </div>
            <div style="position:relative; float:right">
                Counter# @(sm.counter_no), &gt;&gt; Token # <span id="update-message"></span>

            </div>
            <div style="clear:both"></div>
        </div>

        <div class="row">
            <div class="form-group">
                <input type="hidden" id="hidtokenNo" name="hidtokenNo" />
                <div class="col-md-2">
                    @*@Html.ActionLink("Take A Break", "Create", "DailyBreaks", new { area = "" }, new { @class = "btn btn-info" })*@
                </div>
                <div class="col-md-8">

                </div>
            </div>
        </div>


        <div class="row" style="text-align:center">
            <div class="col-md-2" style="text-align:center">
                <button type="submit" onclick="NewServiceNo()" class="btn-squere-xl  btn-color marzin-bottom" id="newService_btn">
                    <span><i class="fa fa-bullhorn"></i></span> Recall
                </button>


                <button type="submit" onclick="ManualCall()" class="btn-squere-xl  btn-color marzin-bottom" id="manual_call_btn" data-toggle="modal" data-target="#myModal">
                    <span><i class="fa fa-user-plus"></i></span>Call Token
                </button>
                <button type="submit" onclick="Transfer()" class="btn-squere-xl  btn-color marzin-bottom" id="Transfer_btn">
                    <span><i class="fa fa-cart-arrow-down"></i></span>Counter Transfer
                </button>

                <button class="btn-squere-xl btn-color marzin-bottom">
                    <a href="@Url.Action("Skipped", "TokenQueues")" title="Skipped List">
                        <span><i class="fa fa-list"></i></span>
                         Missing List
                    </a>
                </button>
                
            </div>
            <div class="col-md-7" style="text-align:center">

                <table class="table table-striped">
                    <tr>

                        @*<td>Start Time</td>*@
                        <td>
                            <div style="position:relative">
                                <div style="position:relative; float:left">
                                    @Html.TextBoxFor(m => m.start_time, new { @class = "form-control Next", @placeholder = " Service Start Time" })
                                </div>
                                <div style="position:relative; float:right">
                                    @Html.TextBoxFor(m => m.service_type_name, new { @class = "form-control Next", @id = "txtServiceType", @placeholder = "Service Type" })
                                </div>
                                <div style="clear:both"></div>
                            </div>
                            <div style="position:relative">
                                <div style="position:relative; float:left">
                                    @Html.TextBoxFor(m => m.generate_time, new { @class = "form-control Next", @placeholder = "Generation Time", @id = "txtgnTime" })
                                </div>
                                <div style="position:relative; float:right">
                                    @Html.TextBoxFor(m => m.call_time, new { @class = "form-control Next", @id = "txtCallTime", @placeholder = "Call Time" })
                                </div>
                                
                                <div style="position:relative; float:right">
                                    @Html.TextBoxFor(m => m.waitingtime, new { @class = "form-control Next", @id = "txtWtTime", @placeholder = "Waiting Time" })
                            </div>
                                <div style="clear:both"></div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.DropDownList("service_sub_type_id", null, htmlAttributes: new { @class = "form-control", @placeholder = "Services" })</td>
                    </tr>
                    <tr>
                        <td>@Html.TextBoxFor(m => m.contact_no, new { @class = "form-control Next", @id = "txtContact", @placeholder = "Mobile No" }) @Html.ValidationMessageFor(m => m.contact_no)</td>
                        <td><button class="btn btn-color" onclick="GetCustomerInformation()">History</button></td>
                    </tr>
                    <tr>
                        <td>@Html.TextBoxFor(m => m.customer_name, new { @class = "form-control Next", @id = "txtName", @placeholder = "Customer Name" }) @Html.ValidationMessageFor(m => m.customer_name)</td>
                    </tr>
                    
                    @*<tr>
                       <td class="form-control Next">Generation Time</td>
                        <td>@Html.TextBoxFor(m => m.generate_time, new { @class = "form-control Next", @id = "txtgnTime", @placeholder = "Generation Time" })</td>
                    </tr>
                    <tr>
                        <td class="form-control Next">Call Time</td>
                        <td>@Html.TextBoxFor(m => m.call_time, new { @class = "form-control Next", @id = "txtCallTime", @placeholder = "Call Time" })</td>
                    </tr>
                    <tr>
                        <td class="form-control Next">Waiting Time</td>
                       
                    </tr>*@

                    <tr>
                        <td>@Html.TextBoxFor(m => m.address, new { @class = "form-control Next", @id = "txtAddress", @placeholder = "Address" }) @Html.ValidationMessageFor(m => m.address)</td>
                    </tr>
                    <tr>
                        <td>@Html.TextAreaFor(m => m.issues, 5, 20, new { @class = "form-control Next", @id = "txtIssues", @row = "10", @placeholder = "Issues" }) @Html.ValidationMessageFor(m => m.issues)</td>
                    </tr>
                    <tr>
                        <td>@Html.TextAreaFor(m => m.solutions,7,20, new { @class = "form-control Next", @id = "txtsolutions", @row = "10", @placeholder = "Solutions" }) @Html.ValidationMessageFor(m => m.solutions)</td>
                    </tr>

                </table>
            </div>

            <div class="col-md-2" style="text-align:center">
                <button type="submit" onclick="SaveNext()" class="btn-squere-xl  btn-color marzin-bottom" id="saveNext_btn">
                    <span><i class="fa fa-chevron-circle-right"></i></span>Next
                </button>
                @*<button type="submit" onclick="Save()" class="btn-squere-xl  btn-color marzin-bottom" id="save_btn">
                    <span><i class="fa fa-check-circle"></i></span>Done
                </button>*@

                <button type="submit" onclick="CancelNext()" class="btn-squere-xl  btn-color marzin-bottom" id="cancelNext_btn">
                    <span><i class="fa fa-angle-double-right"></i></span>Customer Missing
                </button>
                <button type="submit" onclick="Cancel()" class="btn-squere-xl  btn-color marzin-bottom" id="cancel_btn">
                    <span><i class="fa fa-times-circle"></i></span>Skip
                </button>
                <button type="submit" onclick="AddService()" class="btn-squere-xl  btn-color marzin-bottom" id="cancel_btn" data-toggle="modal" data-target="#myModalSave">
                    <span><i class="fa fa-plus-square"></i></span>Add Service
                </button>
                <button class="btn-squere-xl btn-color marzin-bottom">
                    <a href="@Url.Action("Create", "DailyBreaks")" title="Take A Break">
                        <span><i class="fa fa-coffee"></i></span>
                        Break
                    </a>
                </button>
            </div>
        </div>
        <div class="row">
            <div id="historyDiv" class="col-md-offset-2 col-md-6">
                <h4>Previous Service History</h4>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Issues</th>
                            <th>Solutions</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody id="tablebody"></tbody>
                </table>
            </div>
        </div>


    </div>
</div>
<div class="container">
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dissmiss="modal">&times;</button>
                <h2 class="modal-title">Modal</h2>
            </div>
            <div class="modal-body">
                <p>Modal</p>
            </div>
            <div class="modal-footer">
                <button onclick="CancelNext()">Close</button>
            </div>

        </div>
    </div>
</div>
<div class="container">
    <div class="modal fade" id="myModalSave" role="dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"  data-dissmiss="modal">&times;</button>
                <h2 class="modal-title">Modal</h2>
            </div>
            <div class="modal-body">
                <p>Current service will finish and next service will start automatically for this customer. Do you want to continue?"</p>
            </div>
            <div class="modal-footer">
                <button onclick="AddService()">Close</button>
            </div>

        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/sqms/date.js"></script>
<script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/sqms/service-details.js"></script>

}
