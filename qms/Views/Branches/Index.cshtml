@model IEnumerable<qms.Models.tblBranch>
@{
    ViewBag.Title = "Branch Information";
}
<div class="container">
    <div class="row">
        <h4 class="page-head-line">Branch > List </h4>
        <div class="row">
            <div class="col-md-3" style="margin-bottom : 10px;">
                <button class="btn btn-color">
                    @Html.ActionLink("New Branch Opening", "Create")
                </button>
            </div>
            <div class="col-md-6"></div>
            <div class="col-md-3">
                <input type="text" style="font-size: medium;background-color: lightyellow" class="pull-right col-md-3 form-control" placeholder="Search" id="filterBox" onkeyup="FilterTable()" />
            </div>
        </div>



        <div class="col-md-12 scrollbar table-scroll">

            <table class="table table-hover table-bordered" id="data">
                <tr id="Hedding">
                    <th>
                        @Html.DisplayName("Branch Name")
                    </th>
                    <th>
                        @Html.DisplayName("Address")
                    </th>
                    <th>
                        @Html.DisplayName("Contact Person")
                    </th>
                    <th>
                        @Html.DisplayName("Contact No")
                    </th>
                    <th>
                        @Html.DisplayName("Display Next")
                    </th>
                    <th>
                        @Html.DisplayName("Static IP")
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.branch_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.contact_person)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.contact_no)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.display_next)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.static_ip)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.branch_id })

                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/sqms/branch.js"></script>

}

