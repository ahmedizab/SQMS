@model qms.Models.tblCustomerType
@{
    ViewBag.Title = "Service Type Edit";
}
<div class="container">
    <div class="row">
        <h4 class="page-head-line">CustomerType > Edit</h4>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.customer_type_id)

                <div class="form-group">
                    @*@Html.LabelFor(model => model.customer_type_name, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    @Html.Label("Customer Type Name", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.customer_type_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.customer_type_name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-color" />
                        <button class="btn btn-color">
                            @Html.ActionLink("Back to List", "Index")
                        </button>
                    </div>
                </div>
            </div>
        }


    </div>
</div>

