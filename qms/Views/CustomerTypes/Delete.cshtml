@model qms.Models.tblCustomerType

@{
    ViewBag.Title = "Service Type Delete";
}

<div class="container">
    <div class="row">
        <h4 class="page-head-line">Service Type > Delete</h4>
        <hr />
        <div class="col-lg-offset-3 col-md-6">
            <h3>Are you sure you want to delete this?</h3>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Customer Type Name")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.customer_type_name)
                </dd>

            </dl>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Priority")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.priority)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="col-lg-offset-1 form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-color" />
                    <button class="btn btn-color">
                        @Html.ActionLink("Back to List", "Index")
                    </button>
                </div>
            }
        </div>
        </div>
</div>
<br />

