@model IEnumerable<qms.Models.tblServiceType>
@{
    ViewBag.Title = "Service Type List";
}

<div class="container">
    <div class="row">
        <h4 class="page-head-line">Service Type > List</h4>

        
        <a href='@Url.Action("Create", "ServiceTypes")' style="margin-bottom : 10px;">
            <button class="btn btn-color" style="margin-bottom : 10px;">Create New Service Type</button>
        </a>
        <div class="col-md-12 scrollbar table-scroll">

            <table class="table table-hover table-bordered" id="data">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.service_type_id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.service_type_name)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.service_type_id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.service_type_name)
                        </td>
                        <td>
                            <button class="btn btn-color">
                                @Html.ActionLink("Edit", "Edit", new { id = item.service_type_id })
                            </button>
                            <button class="btn btn-color">
                                @Html.ActionLink("Delete", "Delete", new { id = item.service_type_id })
                            </button>
                        </td>
                    </tr>
                }
            </table>
        </div>

    </div>
    </div>



